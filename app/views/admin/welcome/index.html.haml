.row
  .col-md-4

    %ul.nav.nav-pills.nav-stacked
      %li
        = link_to 'Profesores', admin_teachers_path
      %li
        = link_to 'Alumnos', admin_students_path
      %li
        = link_to 'Cursos', admin_courses_path

    %br

    .well.well-sm.status-well
      .row
        .col-md-12
          %h3 Recepción Formularios
      .row
        .col-md-12
          - OnaSubmission.with_error.count.tap do |ona_error|
            = link_to admin_ona_submissions_path do
              - if ona_error > 0
                %h1= ona_error
                %label Errores
              - else
                OK

    .well.well-sm.status-well
      .row
        .col-md-12
          %h3 Pago de alumnos
      .row
        .col-md-6
          %h1
            = link_to number_to_currency(@course_incomes_not_handed), admin_teachers_path
          %label en mano de profesores
        .col-md-6
          %h1
            = number_to_currency(@course_incomes_total)
          %label entregado
      .row
        .col-md-12
          = link_to 'histórico', admin_student_payments_path


  .col-md-8
    = month_calendar do |date|
      .daynum
        = date.day
      - (@course_logs[date] || []).sort_by(&:calendar_name).each do |course_log|
        %div.course_log{"class" => "#{'missing' if course_log.missing}"}
          %span
            = link_to course_log.calendar_name, admin_course_log_path(course_log)
          - unless course_log.missing
            %label.badge
              = course_log.teachers.count
              \ :
              = course_log.students_count
          - else
            %label.badge
              !
