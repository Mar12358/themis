  .col-md-8
    = month_calendar do |date|
      .daynum
        = date.day
      - (@course_logs[date] || []).each do |course_log|
        %div{"class" => "#{'missing' if course_log.missing}"}
          = link_to course_log.calendar_name, admin_course_log_path(course_log)
          - unless course_log.missing
            %label.badge
              = course_log.teachers.count
              \ :
              = course_log.students_count
