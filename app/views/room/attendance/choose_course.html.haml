- content_for :header do
  %h1
    = @date.to_human
    \: Apertura de clase

%ul
  - @courses.each do |course|
    %li
      = link_to course.name, room_open_path(@date, course.id), method: :post

- content_for :footer do
  %h2 Otro dia

  = link_to room_path(date: @prev_date), class: 'btn btn-default' do
    %i.glyphicon.glyphicon-chevron-left
    = @prev_date.to_human

  - if @date != Date.today
    = link_to "Hoy", room_path, class: 'btn btn-default'

  - if @next_date && @next_date != Date.today
    = link_to room_path(date: @next_date), class: 'btn btn-default' do
      %i.glyphicon.glyphicon-chevron-right
      = @next_date.to_human
