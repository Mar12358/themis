- content_for :header do
  %h1
    Apertura de clase:
    = @date.to_human

%ul#course_list
  - @courses.each do |course|
    %li{class: course.track.css_prefix}
      = link_to course.room_name, room_open_path(@date, course.id), method: :post

- content_for :footer do
  %p OTRO D√çA

  = link_to room_path(date: @prev_date), class: 'btn btn-default' do
    %i.glyphicon.glyphicon-chevron-left
    = @prev_date.to_human

  - if @date != School.today
    = link_to "Hoy", room_path, class: 'btn btn-default'

  - if @next_date && @next_date != School.today
    = link_to room_path(date: @next_date), class: 'btn btn-default' do
      %i.glyphicon.glyphicon-chevron-right
      = @next_date.to_human
